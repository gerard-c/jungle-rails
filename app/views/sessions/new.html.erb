<section class="login">

  <header class="page-header">
    <h1>Login</h1>
  </header>

  <div class="row">

      <%= form_tag :login do %>

        <div class="form-group">
          <label>Email</label>
          <br>
          <%= text_field_tag :email %>
        </div>

        <div class="form-group">
          <label>Password</label>
          <br>
          <%= text_field_tag :password %>
        </div>

        <%= submit_tag 'Submit', class: 'btn btn-primary' %>

      <% end %>

  </div>


</section>